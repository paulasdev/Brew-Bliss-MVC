@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style {
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
}


        <section class="menu">
          <h1>
            We deliver nothing but <br />
            the finest coffee experience
          </h1>
          <p class="promo">
            <span class="icon">⚙</span> 50% off on several items
          </p>

          <div class="search-box">
            <input type="text" placeholder="Search here" />
            <button>Search</button>
          </div>

          <div class="categories">
            <div>
              <img src="/images/coffee.png" />
              <p>Hot Coffee</p>
            </div>
            <div>
              <img src="/images/coffee-to-go.png" />
              <p>Cup Coffee</p>
            </div>
            <div>
              <img src="/images/icons8-frappe-64.png" />
              <p>Cold Coffee</p>
            </div>
            <div>
              <img src="/images/tea.png" />
              <p>Tea</p>
            </div>
            <div>
              <img src="/images/cake.png" />
              <p>Dessert</p>
            </div>
          </div>
        </section>


<section class="products">
    @foreach (var item in Model)
    {
        <div class="card">
            @if (item.Price > 3.00M)
            {
                <div class="badge">⚙ 50% off – €@( (item.Price / 2).ToString("0.00") )</div>
            }
            <img src="@item.ImagePath" alt="@item.Name" />
            <h3>@item.Name <span>€@item.Price.ToString("0.00")</span></h3>
            <p>@item.Description</p>
        </div>
    }
</section>
         



        <section class="menu-table container my-5">
          <h2 class="text-center mb-4">Our Coffee Prices</h2>
          <div class="table-responsive">
            <table class="table brew-table">
              <caption class="text-center">
                Our Classic Brews
              </caption>
              <thead>
                <tr>
                  <th>Beverage</th>
                  <th>Size</th>
                  <th>Price</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Espresso</td>
                  <td>Small</td>
                  <td>€2.50</td>
                </tr>
                <tr>
                  <td>Latte</td>
                  <td>Medium</td>
                  <td>€3.20</td>
                </tr>
                <tr>
                  <td>Cappuccino</td>
                  <td>Large</td>
                  <td>€3.80</td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>


@section Scripts {
  <script src="/js/scripts.js"></script>
}
