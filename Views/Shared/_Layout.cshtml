<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brew Bliss</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    @RenderSection("Style", required: false)

    <!-- scripts -->
@RenderSection("Scripts", required: false)

</head>
<body>
     <div class="page-wrapper">
<header class="main-header py-3 mb-4" style="background-color: #43281c;">
  <div class="container d-flex justify-content-between align-items-center">
    <div class="logo">
      <img src="/images/brewbliss-logo.png" alt="Brew Bliss Logo" height="50" />
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/Menu/Menu">Menu</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/About/About">About</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/Contact/Contact">Contact</a></li>
        </ul>
      </div>
    </nav>
  </div>
</header>

    <main role="main" class="container">
        @RenderBody()
    </main>

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <footer class="text-white text-center py-3 mt-5" style="background-color: #43281c;">
        <p class="mb-0">© 2025 Brew Bliss. All rights reserved.</p>
      </footer>
    </div>


  </body>
</html>