

@{
    ViewData["Title"] = "Item Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style {
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
}

<div class="container my-5">
    <h2 class="text-center text-uppercase fw-bold mb-4" style="color: #6f4e37;">Item Details</h2>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">â‚¬@Model.Price.ToString("0.00")</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Image" style="width: 150px;" />
            }
        </dd>
    </dl>

    @if (ViewBag.Ingredients != null || ViewBag.Calories != null || ViewBag.Vegan != null)
{
    <hr />
    <h4>More Information</h4>
    <dl class="row">
        @if (ViewBag.Ingredients != null)
        {
            <dt class="col-sm-2">Ingredients</dt>
            <dd class="col-sm-10">@ViewBag.Ingredients</dd>
        }

        @if (ViewBag.Calories != null)
        {
            <dt class="col-sm-2">Calories</dt>
            <dd class="col-sm-10">@ViewBag.Calories</dd>
        }

        @if (ViewBag.Vegan != null)
        {
            <dt class="col-sm-2">Vegan</dt>
            <dd class="col-sm-10">@(ViewBag.Vegan ? "Yes" : "No")</dd>
        }
    </dl>
}

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.MenuItemId" class="btn btn-outline-dark rounded-pill px-4">Edit</a>
        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Back to List</a>
    </div>
</div>