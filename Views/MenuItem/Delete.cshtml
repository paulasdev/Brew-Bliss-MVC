@model BrewBlissApp.Models.MenuItem

@{
    ViewData["Title"] = "Delete Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style {
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
}

<div class="container my-5">
    <h2 class="text-center text-uppercase fw-bold mb-4 text-danger">Delete Confirmation</h2>

    <div class="alert alert-warning rounded-4">
        Are you sure you want to delete <strong>@Model.Name</strong>?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">â‚¬@Model.Price.ToString("0.00")</dd>

        <dt class="col-sm-2">Category</dt>
<dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Image" style="width: 100px;" />
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="MenuItemId" />
        <button type="submit" class="btn btn-outline-danger rounded-pill px-4">Delete</button>
        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Cancel</a>
    </form>
</div>